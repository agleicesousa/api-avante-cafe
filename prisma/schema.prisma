generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model contato {
  nome      String
  email     String  @unique
  telefone  String
  dataPedido  DateTime @default(now()) 
  assunto String
  mensagem String
}

model Pedido {
  id         Int         @id @default(autoincrement())
  dataPedido DateTime    @default(now())
  status     String
  total      Decimal
  itensPedido ItemPedido[]
}

model Menu {
  id          Int         @id @default(autoincrement())
  nome        String
  descricao   String
  preco       Decimal
  categoria   String
  itensPedido ItemPedido[]
}

model ItemPedido {
  id         Int     @id @default(autoincrement())
  quantidade Int
  precoUnitario Decimal
  pedidoId   Int
  menuId     Int
  pedido     Pedido @relation(fields: [pedidoId], references: [id])
  menu       Menu   @relation(fields: [menuId], references: [id])
}